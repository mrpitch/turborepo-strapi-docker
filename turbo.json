{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "start:strapi"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["dev:strapi"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "dev:strapi": {
      "cache": false
    },
    "build:strapi": {
      "cache": true
    },
    "start:strapi": {
      "cache": true
    }
  }
}
